<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.turnerapac.adultswimau.apps.generic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/tab_search_addlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_height"
            android:layout_alignParentBottom="true"
            android:gravity="center" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/search_sort_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="15dp"
                android:text="SORT BY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_videostab_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_sort_txt"
                android:layout_below="@+id/search_sort_txt"
                android:layout_marginTop="40dp"
                android:text="@string/action_search_tab_allvideos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_episode_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_videostab_txt"
                android:layout_below="@+id/search_videostab_txt"
                android:layout_marginTop="@dimen/search_button_margin_top"
                android:text="@string/action_search_tab_episode"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_clip_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_episode_tabtxt"
                android:layout_below="@+id/search_episode_tabtxt"
                android:layout_marginTop="@dimen/search_button_margin_top"
                android:text="@string/action_search_tab_clips"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/settings_view_iiist"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/search_clip_tabtxt"
                android:layout_below="@+id/search_clip_tabtxt"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/search_relevant_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_clip_tabtxt"
                android:layout_below="@+id/settings_view_iiist"
                android:layout_marginTop="40dp"
                android:text="@string/action_search_tab_relevant"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_recent_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_relevant_tabtxt"
                android:layout_below="@+id/search_relevant_tabtxt"
                android:layout_marginTop="@dimen/search_button_margin_top"
                android:text="@string/action_search_tab_recent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_popular_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_recent_tabtxt"
                android:layout_below="@+id/search_recent_tabtxt"
                android:layout_marginTop="@dimen/search_button_margin_top"
                android:text="@string/action_search_tab_popular"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_trending_tabtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_popular_tabtxt"
                android:layout_below="@+id/search_popular_tabtxt"
                android:layout_marginTop="@dimen/search_button_margin_top"
                android:text="@string/action_search_tab_trending"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/settings_view_iiistsss"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/search_trending_tabtxt"
                android:layout_below="@+id/search_trending_tabtxt"
                android:layout_marginTop="18dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/relativeLayout1" >

            <ListView
                android:id="@+id/search_list_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/ad_height"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:divider="@null"
                android:listSelector="@drawable/list_item_bg"
                android:scrollbarThumbHorizontal="@drawable/scrollbar"
                android:scrollbarThumbVertical="@drawable/scrollbar"
                android:scrollbars="vertical" >
            </ListView>

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/ad_height"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>