<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.turnerapac.adultswimau.apps.generic.customviews.ResizableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       />

    <RelativeLayout
        android:id="@+id/lyt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image"
        android:layout_centerVertical="true"
        android:background="@drawable/carousel_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/feature_title_background_padding" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxWidth="@dimen/feature_title_width"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feature_carousel_text_size_1" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_title"
            android:layout_below="@+id/txt_title"
            android:maxLines="2"
            android:maxWidth="@dimen/feature_title_width"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feature_carousel_text_size_2" />
    </RelativeLayout>

</RelativeLayout>