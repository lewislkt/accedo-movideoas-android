<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/transparent" android:state_pressed="false" android:state_selected="false"/>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@color/highlighted_color" android:state_pressed="true"/>
    <item android:drawable="@android:color/transparent" android:state_pressed="false" android:state_selected="true"/>

</selector>